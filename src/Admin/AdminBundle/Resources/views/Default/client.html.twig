{%extends "AdminAdminBundle::layout.html.twig"%}
{% block pagewrapper %}

    <div id="pagewrapper">
        <div class="row">
        
            <div class="col-lg-10">
                <h1 class="page-header">Liste Clients</h1>
            </div>
             <div class="col-lg-2">
                <img src="{{asset('img/logo.PNG')}}">   
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
         <form action="{{path('user_rechercher')}}" method="POST">
      <div class="col-lg-8">
      </div>
			<div class="col-lg-4">
			<div class="form-group input-group" >
                            
                           
                                           
                                <input type="text" class="form-control" placeholder="Search..."name="recherche" >
                                           
                                <span class="input-group-btn">
                                <td> <input type="submit" class="btn btn-primary btn-block" value="Rechercher"/>               
                                 </span>
                           
                          </div>
			</div>
                             </form>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                       List
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Prenom</th>
                                        <th>Login</th>
                                        <th>Role</th>
                                        <th>Sexe</th>
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    {% for client in clients %}
                                        <tr>
                                            <td>{{client.nom}}</td>
                                            <td>{{client.prenom}}</td>
                                            <td>{{client.login}}</td>
                                            <td>{{client.role}}</td>
                                            <td>{{client.sexe}}</td>
                                            <td><a href="{{path('client_supprimer',{id:client.iduser})}}" class="btn btn-outline btn-danger btn-block">Supprimer ce client</a></td>

                                        </tr>
                                    {% endfor %}

                                </tbody>
                            </table>
                        </div>
                     
                    </div>
                                   
                        <script>
                            $(document).ready(function() {
                                $('#dataTables-example').dataTable();
                            });
                        </script>





                    {% endblock %}
