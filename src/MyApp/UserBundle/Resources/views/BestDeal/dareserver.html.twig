{%extends "UserBundle::layout.html.twig"%}
{% block container %}

    <div class="container">

        <div class="row"  >
        
        <div class="box" align="center">
            <div class="col-lg-12">
           <hr>
            <h2 class="intro-text text-center"> Le deal</h2>
            <hr>
        </div>
                
                <div class="box" align="center">
                    <div class="col-lg-12">
                      {% for deal in deals %}
                <form action="{{path('deal_reserver',{iddeal:deal.IdDeal})}}" method="POST" >            
                           
                         <h4>{{deal.Libelle}}</h4>
                     <img src='{{deal.Image}}' width="600px" height="300px">
