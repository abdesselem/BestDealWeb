                           <h3 class="intro-text"> Nombre de réservations:</h3> <input type="text" name="qte" > <br>
                           <INPUT border="0" src="{{asset('img/reservez.jpg')}}" type="image" Value="submit" align="middle" >
                           
                   
                                         </form>

                      {% endfor %}
                        
                </div>
                </div>
        </div>
       </div>

    </div>
{% endblock %}